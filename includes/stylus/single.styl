@import "main.styl" 
@import "partials/_small-components.styl"
@import "partials/_aside-section.styl" 
@import "partials/_feet-single-rss.styl" 
@import "partials/_sliders.styl" 

p 
	text-transform none

@import "partials/_aside-section.styl" 
.single-main-img
	border-radius 10px
	margin-bottom 20px
	img
		width 100%
		height 100%
		object-fit cover
		border-radius 10px
	@media (max-width 767px)
		height 200px
		padding 0
		border-radius 0px 
.single-head
	.single-title
		color var(--color1-x1)
		font-size 2.5em
		font-family 'CeraProBold'
		margin-bottom 20px
		text-transform none
	.single-sub-title
		color var(--color2-x1)
		font-family 'CeraProBold'
		font-size 1.2em
	.single-caption
		display flex
		justify-content space-between
		margin-bottom 20px
		border-bottom 5px solid var(--color1-x1)
		.single-date-author
			display flex
			align-items center
			color var(--color2-x1)
			font-size 0.85em
			.icon-clock, .icon-person
				padding-right 5px
				font-size 1.2em
			.single-date
				margin-right 10px
			.single-date, .single-author
				display flex
				align-items center
				background var(--color2-x0)
				margin-bottom 0
				padding 5px 10px
				border-radius 20px
	@media (max-width 567px)
		.single-caption 
			display flow-root
			.single-date-author
				margin-bottom 15px
				margin-top 10px
	@media (max-width 767px)
		margin-bottom 0
		.single-title
			font-size 1.8em
		.single-sub-title
			line-height 1.2
		
.single-text
	margin-bottom 20px
	h4
		color var(--color2-x1)
		font-family 'CeraProBold'
		margin-bottom 20px
		text-transform none
	p
		color var(--color2-x1)
		font-size 1.25em 
	span
		color var(--color1-x1)
		font-family 'CeraProBold'
	.highlighted-txt
		width 90%
		text-align center
		font-size 2.1em
		color var(--color1-x1)
		line-height 1.3
		margin 15px auto
	@media (max-width 767px)
		p 
			font-size 1.1em
		.highlighted-txt
			width 100%
			font-size 1.5em
		h4 
			font-size 1.7em
		.second-highlighted-txt
			font-size 1.35em
		:last-child
			margin-bottom 0
		
.second-img-container
	margin-bottom 20px
	
.related-content
	padding-top 10px
	padding-bottom 10px
	border-top 5px solid #F0EFEF
	border-bottom 5px solid #F0EFEF
	margin-bottom 20px
	h5 
		color var(--color2-x2)
		font-family 'CeraProBold'
		margin-bottom 15px
	.related-content-item
		display flex
		border 1px solid var(--color2-x0)
		border-radius 5px
		align-items center
		.thumb-wrap
			height 94px
			width 94px
			margin-right 5px
			border-radius 5px
		p 
			color var(--color2-x1)
			font-family 'CeraProBold'
			font-size 0.8em
			margin-bottom 0	
			line-height 1.2
			overflow hidden
			height 70px
	@media (max-width 767px)
		a 
			margin-bottom 15px
		.related-content-item p 
			font-size .95em

.single-footer
	margin-bottom 25px
	
.third-slider-container
	display none
	
.live-player-container
	@media (max-width 967px)
		p 
			margin-bottom 15px
			
.card-img-wrap
	@media (min-width 968px)
		height 200px
	@media (max-width 967px)
		height 180px
	img
		height 100%
		width 100%
		object-fit cover
		border-radius 8px
	
@media (max-width 767px)
	.more-news-single
		display none
	.single-caption
		margin-bottom 15px
	.feet-img-rss
		.icon-container
			height 35px
			width 35px
			margin-right 6px
		.fb, ,.tw, .wp, .share
			font-size 1.4em
	.third-slider-container
		display block
		.owl-prev
			left -5px !important
		.owl-next
			right -5px !important
@media (min-width 768px) and (max-width 967px)
	.follow-us-container
		margin-top 40px