@import "main.styl" 
@import "partials/_small-components.styl"
@import "partials/_aside-section.styl"
@import "partials/_pagination.styl"

.hide-xs
	@media (max-width 550px)
		display none !important 

.main-card
	.card-img-wrap
		height 170px
		.news-hover
			position absolute
			top 0
			right 0
			height inherit
			display none
		img
			width 100%
			height 100%
			object-fit cover
			border-radius 8px
	.card-body
		height 100px
		background-image url($img"news-wave-img.png")
		background-repeat no-repeat
		background-position bottom right
		.card-title
			font-size 1.1em 
	&:hover
		.news-hover
			display block
