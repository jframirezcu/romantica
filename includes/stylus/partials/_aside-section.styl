.aside-section
	//default section styles
	.banner-md-2
		margin-bottom 15px
	.section-title-container
		margin-bottom 15px
		span
			left 0
			
	//Follow us
	.follow-rss-container
		background var(--color2-x0)
		margin 15px 0 25px 0
		padding 20px 15px
		.rss-item
			display flex
			align-items center
			padding 8px 0
			.icon-container
				background var(--color2-x2)
				margin-right 20px
				min-height 2.7em
				min-width 2.7em
				span
					color white
					font-size 1.7em
			p
				color var(--color2-x2)
				font-weight bold
				font-size 1.1em
				margin-bottom 0
			&:hover, &:focus
				.icon-container
					background var(--color1-x1)
				p 
					color var(--color1-x1)
			transition all .5s ease
			
//aside-cards
.aside-cards-container
	.aside-card
		height 85px
		display flex
		position relative
		align-items center
		overflow hidden
		border 2px solid var(--color2-x0)
		border-radius 5px
		padding 10px
		text-transform none
		margin-bottom 15px
		&:hover, &:active, &:focus
			background var(--color1-x1)
			p
				color white !important
			span 
				color white !important
				opacity 0.6
		.aside-card-desc
			p
				font-size 0.95em
				margin-bottom 0
				line-height 1.2
			.g-text
				color var(--color2-x2)
			.r-text
				color var(--color1-x0)
				font-weight bold
		//affects all icons on cards
		span
			position absolute
			bottom -11px
			right -10%
			font-size 5.5em
			color var(--color1-x0)
		transition all .3s ease
			
//live rudo player
.live-player-container
	margin-bottom 15px
	@media (max-width 967px)
		margin-bottom 0
		p
		color var(--color1-x1)
		font-weight bold
		margin-bottom 0
.iframe-container
	@media (min-width 768px) and (max-width 967px)
		height 260px
		iframe
			height 100%
			object-fit fill 
			
//last-songs
.last-songs-container
	margin-bottom 20px
	@media (max-width 767px)
		margin-top 20px
	.section-title
		span
			line-height .8
			top 8px
		@media (max-width 967px)
			span
				top 12px
				left 0
				line-height initial
	.song-wrap
		background var(--color2-x0)
		display flex
		align-items center
		justify-content space-between
		padding 5px 10px
		&:hover, &:active, &:focus
			background var(--color1-x1)
				p, .icon-play
					color white !important
			.icon-container
				border 1px solid white
		.song-desc
			width 100%
			overflow hidden
			p
				margin-bottom 0
				margin-left 7px
				font-size 0.8em
				line-height 1.2
				color var(--color2-x1)
				&:nth-child(2)
					color #434B46
					font-weight bold
		.icon-container
			border 1px solid var(--color2-x2)
			min-width 1.9em
			min-height 1.9em
			.icon-play
				color white
				font-size 1em