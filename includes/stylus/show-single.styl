@import "main.styl" 
@import "partials/_small-components.styl"
@import "partials/_circled-show-img.styl" 
@import "partials/_aside-section.styl"

// modal styles
.modal-content
	@media (max-width 767px)
		height 250px
		img, iframe, video
			height 100%
			width 100%
			object-fit cover
.close
	position absolute
	right 15px
	opacity 1
	span
		color white
		font-size 1.8em
	&:focus
		outline none 

// section styles
.show-single
	height 450px
	background linear-gradient(top, var(--color1-x1), var(--color1-x0))
	padding 25px 10px
	margin-bottom 25px
	z-index 2
	.section-title-container
		z-index 0
		line-height 1
		.section-title
			.subtitle
				position relative
				color white
				left 0
			h2
				color rgba(250,250,250,0.4)
				letter-spacing 1.2px
	.iframe-container
		z-index 3
		@media (min-width 768px)
			height 400px
			iframe
				object-fit cover
	.show-wrap
		display flex
		justify-content center
		.img-wrap
			margin initial
			margin-right 30px
	.show-desc
		align-self center
		.rss-tag
			margin initial
			margin-top 20px
	@media (max-width 767px)
		height auto
		margin-bottom 0
		.section-title
			.subtitle
				font-size 1.4em 
			h2 
				margin-top 10px
				font-size 1.8em
				letter-spacing -0.5px !important
			
			
//overwrite styles on _aside.section.styl
.last-songs-container
	.section-title
		.subtitle
			left 2px
			top 23px
	.artist, .track-duration
		color var(--color2-x1)
	.track-name
		color #434B46
		font-family 'CeraProBold'
	
.follow-us-container
	.section-title
		.subtitle
			left 2px

.news-section
	@media (max-width 767px)
		.title-mobile
			display none
		.card
			height 130px
			img 
				width 40%
				height auto
				object-fit cover
				border-radius 3px
			.card-body
				width 60%
				padding 10px
				.card-text
					font-family "CeraPro"
					margin-bottom 10px
				.card-title
					margin-bottom 10px

.banner-md-2
	@media (max-width 967px)
		display none
		
.card
	flex-direction unset
	img, .card-body
		width 50%